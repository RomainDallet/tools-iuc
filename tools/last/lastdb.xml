                <extra_files type="file" name="ref_db.des" compare="re_match"/>
                <extra_files type="file" name="ref_db.prj" compare="re_match"/>
                <extra_files type="file" name="ref_db.sds" compare="re_match"/>
                <extra_files type="file" name="ref_db.ssp" compare="re_match"/>
